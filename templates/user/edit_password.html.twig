{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Modification du mot de passe de l'utilisateur
{% endblock %}

{% block body %}
	 <div class="container reset">

		 <!-- Start Forgot Password Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 text-center">Réinitialisation du mot de passe</h1>
					
			</div>
		

			{{ form_start(form) }}
			<div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.newPassword) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirmPassword) }}
                    </div>
                    <div class="form-group mt-5 text-center">
                        <button type="submit" class="btn btn-success">Réinitialiser le mot de passe</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
		<!-- Start Forgot Password Form -->
	</div>
{% endblock %}
