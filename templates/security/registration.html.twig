{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container registration">

   <!-- Registration Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 text-center">Inscription!</h1>
                   <div class="form-group"> {{form_start(form) }}
                   <div class="form-group"> {{form_row(form.email, {'label': 'Email','attr': {'placeholder': 'Adresse email..'}}) }} </div>
                   <div class="form-group"> {{form_row(form.username, {'label': 'Nom de l\utilisateur','attr': {'placeholder': 'Nom de l\utilisateur..'}}) }} </div>
                   <div class="form-group">  {{form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe..'}}) }} </div>
                   <div class="form-group"> {{form_row(form.confirm_password,  {'label': 'Confirmer le mot de passe','attr': {'placeholder': 'Répéter le mot de passe..'}}) }} </div>
  
                  <div class="form-group mt-5 text-center"> <button type="submit" class="btn-success">Inscription! </button> </div>
                    {{form_end(form) }}
             </div>
        </div>
        <!-- End Registration Form -->
        
    </div>
    

{% endblock %}