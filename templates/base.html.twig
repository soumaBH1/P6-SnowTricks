<!DOCTYPE html>
<html>
    <head>
        <!-- Meta -->
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <!-- Title -->
        <title>{% block title %}SnoTricks{% endblock %}</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light" rel="stylesheet">

        <!-- FontAwesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

        <!--Material Icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Main StyleSheet -->
        <link rel="stylesheet" href="/css/style.css">

        <!-- Responsive StyleSheet -->
        <link rel="stylesheet" href="/css/responsive.css">

        <!-- Icon -->
        <link rel="shortcut icon" href="/images/logo.png">
        
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
        {% endblock %}
        <!-- Start Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('home') }}"><img class="logo" src="{{ asset('images/logo_transparent.png') }}" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    <!--  -->
   
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
      <li class="nav-item mt-3 mt-lg-0">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
        <li class="nav-item">
          <a class="nav-link" href="/trick">Tricks</a>
        </li>
       

      {% if not app.user %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('security_login')}}">Connection</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/inscription">S'enregistrer</a>
        </li>
        {% else %}
         <li class="nav-item">
          <a class="nav-link" href="/trick/new">Créer une figure</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('security_logout')}}">Déconnection</a>
        </li>
      {% endif %}
        
       
      </ul>
    </div>
  </div>
</nav>
  <!-- End Navbar -->   
    </head>
