{% extends 'base.html.twig' %}
{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}
{% block body %}
<h2>création d'un trick</h2>
<section class="trick">
{{ form_start(formTrick) }}

    {{form_row(formTrick.title, {'attr': {'placeholder': "Titre de la figure"}}) }}
    {{form_row(formTrick.category) }}
    {{form_row(formTrick.content, {'attr': {'placeholder': "Contenue de la figure"}}) }}
    {{form_row(formTrick.images, {'attr': {'placeholder': "Contenue de l'image"}}) }}
{{form_row(formTrick.createdAt, {'attr': {'placeholder': "Crée le:"}}) }}
<button type="submit" class="btn-success">
    {% if editMode %}
        Enregistrer
    {% else %}
        Ajouter la figure
    {% endif %}
</button>
   {# Vérifier si la route est "trick_edit" on affiche les images #}
   {# {% if app.request.attributes.get('_route') == 'trick_edit' %} #}
        <h2>Images</h2>
        {% for image in trick.images %}
            <div>
                <img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
                <a href="{{ path('trick_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
        {% endfor %}
{{ form_end(formTrick) }}
<hr>
{% endblock %}