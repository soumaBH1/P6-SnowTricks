{% extends 'base.html.twig' %}
{% block body %}
<h2>Bienvenue dans le site communautaire SnowTricks</h2>

<h2 class=   class="fa fa-align-center" aria-hidden="true"> Liste des figures snowTricks: </h2>
{% for trick in tricks %}
    <section class="trick">

        <hr>
        <h3> {{trick.title}} </h3>
        <div class="metadata">Ecrit le {{trick.createdAt| date('d/m/Y')}} à {{trick.createdAt| date('H:i')}}dans la catégolie politique</div>
        <div class="content">
        
                <p>{{ trick.content| raw }}</p>
            <a href="{{ path('trick_show', {'id': trick.id}) }}" class="btn btn-primary">Lire la suite</a>
            <a href="{{ path('trick_edit', {'id': trick.id}) }}" class="btn btn-primary">Modifier</a>
        </div>
    </trick>
{% endfor %}



</section>
{% endblock %}